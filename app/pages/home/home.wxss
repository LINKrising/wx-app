/* pages/home/home.wxss */

.page{
    width: 100%;
    height: auto;
    overflow: hidden;
    
}
.info-list{
    width: 100%;
    height:30rpx;
    text-align:center;
    
}
.swiper-wrapper .slide-image{
    width: 100%;
    height: 100%;
}
.search-wrapper{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    line-height: 90rpx;
    z-index: 99;
    background: white;
}
.search-wrapper .search-input{
    width: 94%;
    height: 70rpx;
    border: 1px solid #f3f4f7;
    border-radius: 70rpx;
    margin-top: 20rpx;
    margin-left: 3%;
    outline: none;
    background: #f3f4f7;
    line-height: 70rpx;
    text-align: center;

}
.search-wrapper .search-input text{
    font-size:30rpx;
    width: 100%;
    height: 100%;
    color: burlywood;
}
.navbar{
    margin-top: 30rpx;
    width: 100%;
    height: 120rpx;
    overflow: hidden;
    font-size: 10px;
    border-top: 1px solid #e2e3e7;
    line-height: 120rpx;
}
.navbar .bg{
    float: left;
    width: 100%;
    height: 100%;
    text-align: center;



}
.navbar .list{
    width: 33.3%;
    height: 100%;
    float: left;
    text-align: center;
    position: relative;
}
.navbar .bg image{
    margin-top: 10rpx;
    width: 64rpx;
    height: 64rpx;

}
.navbar .bg text{
    height: 100%;
    width: 33.3%;
    text-align: center;
    position: absolute;
    top: 34rpx;
    left: 80rpx;

}
.intelval{
    width: 100%;
    height: 20rpx;
    background:#f3f4f7;
}
.good-lists .list-title{
    display: block;
    width: 100%;
    height: 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    padding-left: 18rpx;
    line-height: 60rpx;
}
.good-lists .goods-wrapper{
    display: flex;
    flex-flow:row wrap;
    justify-content: space-around;
}
.good-lists .goods{
    width: 46%;
    height: 400rpx;
    border: 1px solid darkgray;
}
.wrapper{
    margin-top: 120rpx;
}
.goods{
    display: flex;
    flex-direction: column;
}
.goods .goods-pic{
    width:300rpx;
    height: 300rpx;
}
.goods .goods-title{
    width: 100%;
    padding: 0rpx 10rpx;
    font-size: 24rpx;
    font-weight: bold;
    text-overflow: clip;
}
.goods .goods-price{
    color: #F16C38;
}